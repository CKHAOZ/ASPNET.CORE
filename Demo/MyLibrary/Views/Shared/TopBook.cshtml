@model BookViewModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Year</h3>
            <h3>
                <a href="#">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>
